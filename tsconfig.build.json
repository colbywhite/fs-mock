{
  "exclude": [
    "setup-test-env.ts",
    "vitest.config.ts",
    "src/**/*.test.ts",
    "dist"
  ],
  "compilerOptions": {
    "declaration": true,
    "target": "ES2021",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
